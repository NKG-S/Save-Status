<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:ignore="BottomAppBar"
    tools:context="com.kezor.localsave.savestatus.MediaViewerFragment">

    <!-- Top App Bar for back button and title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:navigationContentDescription="@string/cd_back_button"
            app:navigationIcon="@drawable/ic_arrow_back_outlined"
            app:navigationIconTint="@android:color/white"
            app:titleTextAppearance="?attr/textAppearanceTitleLarge"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/image_full_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/cd_media_thumbnail"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/bottom_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Bottom Action Bar for Save/Share -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_save_button"
                app:icon="@drawable/ic_save_outlined"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"
                style="@style/Widget.Material3.Button.TextButton"
                android:contentDescription="@string/cd_save_button"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saved_share_button"
                app:icon="@drawable/ic_share_outlined"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:contentDescription="@string/cd_share_button"/>

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.constraintlayout.widget.ConstraintLayout>
