<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".SettingsFragment">

    <!-- Top App Bar for the title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_settings"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleTextAppearance="?attr/textAppearanceHeadlineSmall"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Theme Section -->
            <include layout="@layout/layout_settings_section_header"
                android:id="@+id/header_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleText="@string/settings_section_theme"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp">

                <RadioGroup
                    android:id="@+id/radio_group_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_system_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_system_default"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:contentDescription="@string/cd_theme_switch"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_light_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_light_mode"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:contentDescription="@string/cd_theme_switch"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_dark_mode"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:minHeight="48dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:contentDescription="@string/cd_theme_switch"/>
                </RadioGroup>
            </com.google.android.material.card.MaterialCardView>

            <!-- Storage Section -->
            <include layout="@layout/layout_settings_section_header"
                android:id="@+id/header_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:titleText="@string/settings_section_storage"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <include layout="@layout/item_settings_info"
                        android:id="@+id/item_storage_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_saved_status_storage_location"
                        app:itemSubtitle="@string/settings_default_folder_path"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_change_folder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_change_save_folder"
                        app:itemIcon="@drawable/ic_folder_outlined"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_switch"
                        android:id="@+id/item_auto_save_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_save_all_statuses_toggle_title"
                        app:itemSubtitle="@string/settings_save_all_statuses_toggle_summary"
                        app:itemIcon="@drawable/ic_save_outlined"
                        app:itemContentDescription="@string/cd_auto_save_switch"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_switch"
                        android:id="@+id/item_save_older_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_save_older_status_toggle_title"
                        app:itemSubtitle="@string/settings_save_older_status_toggle_summary"
                        app:itemIcon="@drawable/ic_history_outlined"
                        app:itemContentDescription="@string/cd_save_older_switch"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_go_to_auto_saved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_go_to_saved_all_statuses"
                        app:itemIcon="@drawable/ic_folder_open_outlined"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_clear_auto_saved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_clear_all"
                        app:itemIcon="@drawable/ic_delete_outlined"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- App Info Section -->
            <include layout="@layout/layout_settings_section_header"
                android:id="@+id/header_app_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:titleText="@string/settings_section_app_info"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_privacy_policy"
                        app:itemIcon="@drawable/ic_policy_outlined"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_rate_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_rate_us"
                        app:itemIcon="@drawable/ic_star_outlined"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_share_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_share_app"
                        app:itemIcon="@drawable/ic_share_outlined"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_button"
                        android:id="@+id/item_developer_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_developer_info"
                        app:itemIcon="@drawable/ic_info_outlined"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"/>

                    <include layout="@layout/item_settings_info"
                        android:id="@+id/item_app_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:itemTitle="@string/settings_app_version"
                        app:itemSubtitle="@string/settings_app_version_placeholder"
                        app:itemIcon="@drawable/ic_version_outlined"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>