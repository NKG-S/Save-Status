<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseAppTint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Enhanced Bottom Controls Layout - same ID and structure -->
    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/controls_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Enhanced Position Text - same ID -->
        <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono_regular"
            android:gravity="center"
            android:minWidth="45dp"
            android:textColor="@color/controls_text_primary"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="01:24" />

        <!-- Enhanced Progress Bar - same ID -->
        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:played_color="@color/progress_played_color"
            app:buffered_color="@color/progress_buffered_color"
            app:unplayed_color="@color/progress_unplayed_color"
            app:scrubber_color="@color/progress_scrubber_color"
            app:scrubber_enabled_size="14dp"
            app:scrubber_disabled_size="10dp"
            app:bar_height="3dp"
            app:touch_target_height="28dp" />

        <!-- Enhanced Duration Text - same ID -->
        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono_regular"
            android:gravity="center"
            android:minWidth="45dp"
            android:textColor="@color/controls_text_primary"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="04:32" />

    </LinearLayout>

    <!-- Enhanced Center Control Buttons - same IDs -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/controls_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Enhanced Rewind Button - same ID -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Background Circle -->
            <View
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/control_button_background"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/exo_rew"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_previous_button"
                android:focusable="true"
                android:src="@drawable/ic_replay_10_outlined"
                android:tint="@color/control_button_icon_color"
                android:padding="14dp"
                android:scaleType="centerInside" />

        </FrameLayout>

        <!-- Enhanced Play Button - same ID -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <!-- Main Play Button Background -->
            <View
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/main_control_button_background"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/exo_play"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_play_pause_button"
                android:focusable="true"
                android:src="@drawable/ic_play_circle_filled_24"
                android:tint="@color/main_control_button_icon_color"
                android:padding="18dp"
                android:scaleType="centerInside" />

            <!-- Enhanced Pause Button - same ID -->
            <ImageButton
                android:id="@+id/exo_pause"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_play_pause_button"
                android:focusable="true"
                android:src="@drawable/ic_pause_circle_filled_24"
                android:tint="@color/main_control_button_icon_color"
                android:padding="18dp"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Enhanced Forward Button - same ID -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Background Circle -->
            <View
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/control_button_background"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/exo_ffwd"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_next_button"
                android:focusable="true"
                android:src="@drawable/ic_forward_10_outlined"
                android:tint="@color/control_button_icon_color"
                android:padding="14dp"
                android:scaleType="centerInside" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>